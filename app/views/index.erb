<div class="row">
  <div class="col-md-4">

    <ul class="nav nav-pills nav-justified">
      <li role="presentation" class="active list-nav-button"><a href="#">List All</a></li>
      <li role="presentation" class="new-nav-button"><a href="#">Create New</a></li>
      <li role="presentation" class="search-nav-button"><a href="#">Search</a></li>
    </ul>

    <div class="new-contact-form display-none">
      <h2 class="text-center">New Contact</h2>
      <form id="new-contact">
        <div class="form-group">
          <label for="firstname">First name:</label>
          <input id="firstname" class="form-control" name="firstname" type="text" />
        </div>
        <div class="form-group">
          <label for="lastname">Last name:</label>
          <input id="lastname" class="form-control" name="lastname" type="text" />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input id="email" class="form-control" name="email" type="text" />
        </div>
        <div class="form-group">
          <button id="new-contact-submit" class="form-control" type="submit">Submit</button>
        </div>
      </form>
    </div>

    <div class="search-contact-form display-none">
      <form id="search-contacts">
        <h2 class="text-center">Search</h2>
        <div class="form-group">
          <input id="search" class="form-control" name="search" type="text" />
        </div>
        <div class="form-group">
          <button id="search-submit" class="form-control" type="submit">Submit</button>
        </div>
      </form>
    </div>

  </div>

  <div class="col-md-8">
    <p id="message"></p>
    <h2>All Contacts</h2>
    <ul class="contacts-index"></ul>
  </div>
</div>
